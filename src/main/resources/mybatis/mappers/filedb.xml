<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
							
<mapper namespace="com.kosta.clothes.dao.FileDAO">
	<select id="getNextId" resultType="Integer">
		<![CDATA[
			select file_seq.nextval from dual
		]]>
	</select>
	
	<insert id="insertFileInfo" parameterType="FileVO">
		<![CDATA[
			insert into tfile (tid,directory_name,tname,tsize,content_type,upload_date)
			values(#{tid},#{directory_name},#{tname},#{tsize},#{content_type},sysdate)
		]]>
	</insert>
</mapper>							