<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="com.kosta.clothes.dao.SharingDAO">
	<select id="getNextSharingNo" resultType="Integer">
		<![CDATA[
			select sharing_seq.nextval from dual
		]]>
	</select>
	
	<insert id="insertSharing" parameterType="sharing">
		<![CDATA[
			insert into sharing(sno,stitle,scontent,sfileids,sdealType,
			addressCity,addressTown,regDate)
			values (#{sno},#{stitle},#{scontent},#{sfileids,jdbcType=VARCHAR},
			#{sdealType},#{addressCity},#{addressTown},sysdate)
	
		]]>
	</insert>
	
	<select id="selectSharing" parameterType="Integer" resultType="sharing">
		<![CDATA[
			select * from sharing where sno=#{sno}
		]]>
	</select>
	
	<select id="selectSharingList" resultType="sharing">
		<![CDATA[
			select sno, sname, stitle, scontent, sstatus, sfileids, addressCity, addressTown, grade, ai, count, sdealType, regdate from sharing order by sno desc
		]]>
	</select>
</mapper>

















