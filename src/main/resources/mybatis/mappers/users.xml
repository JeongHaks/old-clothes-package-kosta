<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="com.kosta.clothes.dao.UsersDAO">
	<!--회원가입[업체] 정보등록 -->
	<insert id="insertBusiness" parameterType="business">
		<selectKey keyProperty="bno" resultType="Integer" order="BEFORE">
			<![CDATA[
				select business_seq.nextval from dual
			]]>
		</selectKey>
		

		<![CDATA[
			insert into business(
					bno,
					bname,
					businessid,
					baddress,
					bdetailadd,
					bkakaoid,
					bphone,
					bpassword,
					bnumber,
					bstar,
					sect, 
					regdate)
					values(
					#{bno},
					#{bname},
					#{businessid},
					#{baddress},
					#{bdetailadd},
					#{bkakaoid},
					#{bphone},
					#{bpassword},
					#{bnumber},
					0,
					#{sect},
					sysdate	)
		]]>
	</insert>
	
	<!--회원가입[개인] 정보등록 -->
	<insert id="insertUsers" parameterType="users">
		<selectKey keyProperty="userno" resultType="Integer" order="BEFORE">
			<![CDATA[
				select users_seq.nextval from dual
			]]>
		</selectKey>
		
		<![CDATA[
			insert into users(
					userno,
					nickname,
					userid,
					phone,
					password,
					sect,
					joindate )
					values(
					#{userno},
					#{nickname},
					#{userid},
					#{phone},
					#{password},
					#{sect},
					sysdate	)
		]]>
	</insert>
	
	
	<!--닉네임 중복체크[개인] -->
	<select id="selectName" parameterType="String" resultType="com.kosta.clothes.bean.Users">
		<![CDATA[
			SELECT * 
			FROM users 
			WHERE nickname=#{checknick}
		]]>
	</select>

	
	<!--닉네임 중복체크[업체] -->
	<select id="selectBname" parameterType="String" resultType="com.kosta.clothes.bean.Business">
		<![CDATA[
			SELECT * 
			FROM business 
			WHERE bname=#{checkname}
		]]>
	</select>


	<!--아이디 중복체크[개인] -->
	<select id="selectuserid" parameterType="String" resultType="com.kosta.clothes.bean.Users">
		<![CDATA[
			SELECT * 
			FROM users 
			WHERE userid=#{checkuserid}
		]]>
	</select>

	<!--아이디 중복체크[업체] -->
	<select id="selectbusinessid" parameterType="String" resultType="com.kosta.clothes.bean.Business">
		<![CDATA[
			SELECT * 
			FROM business 
			WHERE businessid=#{businessidCheck}
		]]>
	</select>
	
	<!--로그인[개인] -->
	<select id="selectAccount" parameterType="map" resultType="Users">
		<![CDATA[
			SELECT *
			FROM users 
			WHERE userid=#{userid} and password=#{password}
		]]>
	</select>
	<!--로그인[업체] -->
	<select id="selectbAccount" parameterType="map" resultType="Business">
		<![CDATA[
			SELECT *
			FROM business 
			WHERE businessid=#{businessid} and bpassword=#{bpassword}
		]]>
	</select>
	
	<!--아이디찾기 -->
	<select id="findUserId" parameterType="String" resultType="String">
		<![CDATA[
			SELECT userid
			FROM users
			WHERE phone=#{phone}
		]]>
	</select>
	<select id="findBusinessId" parameterType="String" resultType="String">
		<![CDATA[
			SELECT businessid
			FROM business 
			WHERE bphone=#{bphone}
		]]>
	</select>
	<!--아이디&전화번호 체크 -->
	<select id="checkUserIdnPhone" parameterType="map" resultType="String">
		<![CDATA[
			SELECT userid
			FROM users
			WHERE userid = #{userid} and phone=#{phone}
		]]>
	</select>
	<select id="checkBusinessIdnPhone" parameterType="map" resultType="String">
		<![CDATA[
			SELECT businessid
			FROM business
			WHERE businessid = #{businessid} and bphone=#{bphone}
		]]>
	</select>
	<update id="updatepassword" parameterType="map">
		<![CDATA[
			update users set password = #{password} where userid = #{userid}
		]]>
	</update>
	<update id="updatebpassword" parameterType="map">
		<![CDATA[
			update business set bpassword = #{bpassword} where businessid = #{businessid}
		]]>
	</update>
	<select id="countUserIdbyPN" parameterType="String" resultType="Integer">
		<![CDATA[
			SELECT count(userid)
			FROM users
			WHERE phone=#{phone}
		]]>
	</select>
	<select id="countBusinessIdbyPN" parameterType="String" resultType="Integer">
		<![CDATA[
			SELECT count(businessid)
			FROM business
			WHERE bphone=#{bphone}
		]]>
	</select>
	
		<!--비밀번호 체크[개인] -->
	<select id="checkupass" parameterType="String" resultType="String">
		<![CDATA[
			SELECT password
			FROM users 
			WHERE userid=#{id}
		]]>
	</select>
	<!-- 개인정보ㅎ수정 -->
	<update id="updateuser" parameterType="users">
		<![CDATA[
			update users 
			set nickname = #{nickname},
				password = #{password},
				phone = #{phone}			 
			where userid = #{userid}
		]]>
	</update>

	
	
	
	
		<!--비밀번호 체크[업체] -->
	<select id="checkbpass" parameterType="String" resultType="String">
		<![CDATA[
			SELECT bpassword
			FROM business 
			WHERE businessid=#{id}
		]]>
	</select>

	<!-- 업체정보ㅎ수정 -->
	<update id="updatebusiness" parameterType="business">
		<![CDATA[
			update business 
			set bname = #{bname},
				bpassword = #{bpassword},
				bphone = #{bphone},
				baddress = #{baddress},
				bdetailadd=#{bdetailadd},
				bkakaoid=#{bkakaoid},
				bnumber=#{bnumber}
			where businessid = #{businessid}
		]]>
	</update>

	
		<!--비밀번호 체크[업체] -->
	<select id="checkbpass" parameterType="String" resultType="String">
		<![CDATA[
			SELECT bpassword
			FROM business 
			WHERE businessid=#{id}
		]]>
	</select>
	
	
	<!-- 개인정보탈퇴 -->
	<delete id="deleteuser" parameterType="Integer">
		<![CDATA[
			delete  
			from users		 
			where userno = #{userno}
		]]>
	</delete>
	
