	</delete>
	
	<!-- 개인정보탈퇴 -->
	<delete id="deletereview" parameterType="Integer">
		<![CDATA[
			delete  
			from review		 
			where userno = #{userno}
		]]>
	</delete>	

	<!-- 개인정보탈퇴 -->
	<delete id="deletemessage" parameterType="Integer">
		<![CDATA[
			delete  
			from message		 
			where sendUserno = #{userno} and recvUserno = #{userno}
		]]>
	</delete>	
	

	<!-- 업체정보탈퇴 -->
	<update id="deletebusiness" parameterType="Integer">
		<![CDATA[
			update business
			set bname=null, businessid=null, baddress=null, bdetailadd=null, bkakaoid=null, 
				bphone=null, bpassword=null, bnumber=null, bstar=null, regdate=null, sect=null 
			where bno = #{bno}
		]]>
	</update>

</mapper>

















