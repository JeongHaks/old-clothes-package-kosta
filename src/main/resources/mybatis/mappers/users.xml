<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="com.kosta.clothes.dao.UsersDAO">
	<!--회원가입[업체] 정보등록 -->
	<insert id="insertBusiness" parameterType="business">
		<selectKey keyProperty="bno" resultType="Long" order="BEFORE">
			<![CDATA[
				select business_seq.nextval from dual
			]]>
		</selectKey>
		

		<![CDATA[
			insert into business(
					bno,
					bname,
					businessid,
					baddress,
					bdetailadd,
					bkakaoid,
					bphone,
					bpassword,
					bnumber,
					star,
					regdate )
					values(
					#{bno},
					#{bname},
					#{businessid},
					#{baddress},
					#{bdetailadd},
					#{bkakaoid},
					#{bphone},
					#{bpassword},
					#{bnumber},
					0,
					sysdate	)
		]]>
	</insert>
	
	<!--회원가입[개인] 정보등록 -->
	<insert id="insertUsers" parameterType="users">
		<selectKey keyProperty="no" resultType="Long" order="BEFORE">
			<![CDATA[
				select users_seq.nextval from dual
			]]>
		</selectKey>
		
		<![CDATA[
			insert into users(
					no,
					nickname,
					userid,
					phone,
					password,
					grade,
					joindate )
					values(
					#{no},
					#{nickname},
					#{userid},
					#{phone},
					#{password},
					0,
					sysdate	)
		]]>
	</insert>
	
	
	<!--닉네임 중복체크[개인] -->
	<select id="selectName" parameterType="String" resultType="com.kosta.clothes.bean.Users">
		<![CDATA[
			SELECT * 
			FROM users 
			WHERE nickname=#{checknick}
		]]>
	</select>

	
	<!--닉네임 중복체크[업체] -->
	<select id="selectBname" parameterType="String" resultType="com.kosta.clothes.bean.Business">
		<![CDATA[
			SELECT * 
			FROM business 
			WHERE bname=#{checkname}
		]]>
	</select>


	<!--아이디 중복체크[개인] -->
	<select id="selectuserid" parameterType="String" resultType="com.kosta.clothes.bean.Users">
		<![CDATA[
			SELECT * 
			FROM users 
			WHERE userid=#{checkuserid}
		]]>
	</select>

	<!--아이디 중복체크[업체] -->
	<select id="selectbusinessid" parameterType="String" resultType="com.kosta.clothes.bean.Business">
		<![CDATA[
			SELECT * 
			FROM business 
			WHERE businessid=#{businessidCheck}
		]]>
	</select>
	
	<!--로그인 -->
	<select id="selectAccount" parameterType="map" resultType="Users">
		<![CDATA[
			SELECT *
			FROM users 
			WHERE email=#{email} and password=#{password}
		]]>
	</select>
	
</mapper>

















